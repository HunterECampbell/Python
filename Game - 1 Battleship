from random import randint


board = []

for O in range(0, 5):
  board.append(["O"] * 5)

def print_board(board):
  for row in board:
    print " ".join(row)

print print_board(board)


def random_row(board):
  return randint(0, len(board)-1)

def random_col(board):
  return randint(0, len(board[0])-1)

ship_row = random_row(board)+1
ship_col = random_col(board)+1
print ship_row
print ship_col


for turn in range(4):
  print
  print "Turn", turn+1
  guess_row = int(raw_input("Guess a row: "))
  guess_col = int(raw_input("Guess a col: "))

  if guess_row == ship_row and guess_col == ship_col:
    board[guess_row-1][guess_col-1] = "!"
    print
    print
    print_board(board)
    print
    print "You destroyed my battleship!"
    print "You Win!"
    break
  else:
    if guess_row not in range(6) or guess_col not in range(6):
      print "Oops, that's not even in the ocean!"
      print
      print
    elif board[guess_row-1][guess_col-1] == "X":
      print "You guessed that one already."
      print
      print
    else:
      print "You missed my battleship"
      print
      print
      board[guess_row-1][guess_col-1] = "X"
    if turn == 2:
      print_board(board)
      print
      print
      print "Game Over!"
      break
    print_board(board)
